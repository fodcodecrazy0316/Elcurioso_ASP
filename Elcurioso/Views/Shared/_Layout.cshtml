<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elcurioso</title>
    <link href='https://fonts.googleapis.com/css?family=Architects Daughter' rel='stylesheet'>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome.all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Elcurioso.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light custom-navbar" style="background-color: rgb(4, 112, 180);">
            <div class="container justify-content-md-center justify-content-lg-center justify-content-end" style="width: 100%;">
                <div class="container logo-responsive d-lg-none">
                    <a class="navbar-brand custom-navbar-logo mx-auto" href="/">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="d-flex justify-content-center menu-wrapper" style="width: 100%;">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/menu">MENU</a>
                            </li>
                        </ul>
                        <a class="navbar-brand d-none d-lg-block custom-navbar-logo" href="/">
                            <img src="~/images/logo-main.png" alt="">
                        </a>
                        <ul class="navbar-nav ml-sm-auto right-menu">
                            <li class="nav-item active">
                                <a class="nav-link" href="/contact-us">CONTACT US</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-warning" href="/booknow">BOOK A TABLE</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">

        <div class="footer-ssl">
            <span id="siteseal">
                <script async type="text/javascript" src="https://seal.starfieldtech.com/getSeal?sealID=JOSWpFmHX2XPujBnLuwzBuMhi4e2fE4fG963DaHTR7Fnvtrp6FeTaswyIxTt"></script>
            </span>
        </div>

        <div class="container">
            <div class="d-flex flex-sm-row flex-column justify-content-between align-items-center address-bar">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="ml-2 find-us">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div>
                        <p style="padding-top: 10px;"> &nbsp;+44 1992 630099</p>
                    </div>
                </div>
                <div>
                    <p>@@2021 Elcurioso tapas and grill</p>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <h5>Follow Us:</h5>
                    <div class="ml-2 find-us">
                        <i class="fa fa-facebook-square" onclick="goFaceBookPage()"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <div class="ids-ripple-container" id="lds-ripple-loader">
        <div class="lds-ripple"><div></div><div></div></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

